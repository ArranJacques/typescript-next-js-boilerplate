.home-page
  display flex
  align-items center
  justify-content center
  width 100%
  height 100%

  .home-page__body
    position relative
    width 300px

    .svg
      width 100%

    a
      position absolute
      top 50%
      left 50%
      color white
      text-decoration none
      transform translate(-50%, -50%)

      &:hover
        text-decoration underline
